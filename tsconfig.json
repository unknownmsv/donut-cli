{
  "compilerOptions": {
    /* Type Checking */
    "strict": true,

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",

    /* Emit */
    "outDir": "./dist",
    
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Language and Environment */
    "target": "ES2022",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
